{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/linux/bin/VoidInvaders",
            "stopAtEntry": true,
            "externalConsole": false,
            "MIMode": "gdb",
            "args": ["--level","assets/testLevel.yaml"],
            "cwd": "${workspaceRoot}",
            "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              },
            ],
            "preLaunchTask": "build",
        },

    ]
}
